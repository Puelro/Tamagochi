<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/kitchen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="46dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="0â‚¬"
                android:textColor="@android:color/white"
                app:autoSizeTextType="uniform" />
            <!--app:autoSizeTextType="uniform" android:textSize="36sp" -->

            <ProgressBar
                android:id="@+id/progressBarHunger"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:indeterminateOnly="false"
                android:padding="10dp"
                android:progressDrawable="@drawable/progressbar"
                tools:progress="60"></ProgressBar>

            <ProgressBar
                android:id="@+id/progressBarEnergy"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:indeterminateOnly="false"
                android:padding="10dp"
                android:progressDrawable="@drawable/progressbar"
                tools:progress="60"></ProgressBar>

            <ProgressBar
                android:id="@+id/progressBarCleanliness"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:indeterminateOnly="false"
                android:padding="10dp"
                android:progressDrawable="@drawable/progressbar"
                tools:progress="60"></ProgressBar>

            <ProgressBar
                android:id="@+id/progressBarHappiness"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:indeterminateOnly="false"
                android:padding="10dp"
                android:progressDrawable="@drawable/progressbar"
                tools:progress="60"></ProgressBar>

            <ProgressBar
                android:id="@+id/progressBarHealth"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:indeterminateOnly="false"
                android:padding="10dp"
                android:progressDrawable="@drawable/progressbar"
                tools:progress="60"></ProgressBar>

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="26dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivHunger"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="75dp"
                android:layout_marginLeft="75dp"
                app:srcCompat="@drawable/hunger" />
            <!--Quelle: https://icon-icons.com/download/134309/PNG/64/-->

            <ImageView
                android:id="@+id/ivEnergy"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="47dp"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/energy" />
            <!--Quelle: https://icon-icons.com/download/143566/PNG/64/-->

            <ImageView
                android:id="@+id/ivCleanliness"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="45dp"
                app:srcCompat="@drawable/cleanliness" />
            <!--Quelle: https://icon-icons.com/download/64254/PNG/64/-->

            <ImageView
                android:id="@+id/ivHappiness"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="49dp"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="1dp"
                app:srcCompat="@drawable/happiness" />
            <!--Quelle: https://icon-icons.com/download/73409/PNG/64/-->

            <ImageView
                android:id="@+id/ivHealth"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="45dp"
                app:srcCompat="@drawable/health" />
            <!--Quelle: https://icon-icons.com/download/173828/PNG/64/-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBedroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/tvBedroom"
                app:backgroundTint="#009e60" />

            <Button
                android:id="@+id/btnKitchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/tvKitchen"
                app:backgroundTint="#8f0114" />

            <Button
                android:id="@+id/btnBathroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/tvBathroom"
                app:backgroundTint="#0184ac" />

            <Button
                android:id="@+id/btnPlayroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/tvPlayroom"
                app:backgroundTint="#a97c00" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/tvRoom"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/ivPet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="250dp"
            android:layout_weight="1"
            android:src="@drawable/kiwi" />

        <ImageView
            android:id="@+id/ivDirty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dirty" />

        <ImageView
            android:id="@+id/ivSad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sad" />

        <ImageView
            android:id="@+id/ivTired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/tired" />

        <ImageView
            android:id="@+id/ivSleeping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sleeping" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="750dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Name"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnSleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/bed" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/shop" />

            <ImageButton
                android:id="@+id/btnFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/food" />

            <ImageButton
                android:id="@+id/btnCoffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/coffee" />

            <ImageButton
                android:id="@+id/btnPotion"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/potion" />
                <!--Quelle: https://icon-icons.com/download/107487/PNG/128/-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPlay"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/controller" />
                <!--Quelle: https://icon-icons.com/download/50382/PNG/128/-->

            <ImageButton
                android:id="@+id/btnPet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/hand" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnWash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/shower" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>